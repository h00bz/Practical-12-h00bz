@model Student

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/student","Students"),
    ($"/student/details/{Model.Id}",$"{Model.Id}"),
    ("","Edit")
}) />

<div class="card rounded shadow p-4">

    <h3>Edit Student</h3>

    <form asp-action="Edit">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <!-- hide the id as its not user editable but needs to be in the -->
        <!-- form to ensure the student passed to the controller is complete -->    
        <input type="hidden" asp-for="Id" class="form-control"/>
       
        <!-- name -->
        <div class="mt-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span  asp-validation-for="Name" class="text-danger"></span>
        </div>
    
        <!-- course -->
        <div class="mt-3">
            <label asp-for="Course" class="form-label"></label>
            <input asp-for="Course" class="form-control"/>
            <span asp-validation-for="Course" class="text-danger"></span>
        </div>

        <!-- age and grade input groups in single row -->      
        <div class="row mt-3">
            <div class="col">
                <label asp-for="Dob" class="form-label"></label>
                <input asp-for="Dob" class="form-control"/>
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>

            <!-- email -->
            <div class="col">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control"/>
                <span  asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <!-- photoUrl -->
        <div class="mt-3">
            <label asp-for="PhotoUrl" class="form-label"></label>
            <input asp-for="PhotoUrl" type="url" class="form-control"/>
            <span  asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div>
       
        <!-- submit button and cancel link which navigates to Index action -->
        <div class="mt-3">           
            <button type="submit" class="btn btn-primary" aria-label="save">Save</button>            
            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id" aria-label="cancel" >Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}